@model ECommerce.ViewModel.ProductViewModel
@{
	ViewData["Title"] = "CreateProduct";
}

<h1>CreateProduct</h1>
<hr />
<div class="row">
	<div class="col-md-4">
		<form enctype="multipart/form-data" asp-action="CreateProduct">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Name" class="control-label"></label>
				<input asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Description" class="control-label"></label>
				<input asp-for="Description" class="form-control" />
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Price" class="control-label"></label>
				<input asp-for="Price" class="form-control" />
				<span asp-validation-for="Price" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Quantity" class="control-label"></label>
				<input asp-for="Quantity" class="form-control" />
				<span asp-validation-for="Quantity" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label class="control-label">Category </label>
				<select id="CatigoryList" asp-for="IdCategory" class="form-control" asp-items="ViewBag.categories"></select>
				<span asp-validation-for="IdCategory" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label class="control-label">Type </label>
				<select id="TypeList" asp-for="IdType" class="form-control"></select>
				<span asp-validation-for="IdType" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label class="control-label">Brand </label>
				<select asp-for="Brand" class="form-control">
					<option value="ZARA">ZARA</option>
					<option value="Nike">Nike</option>
					<option value="H&M">H&M</option>
				</select>
				<span asp-validation-for="Brand" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label class="control-label">add color</label>
				<select asp-for="Colors" class="form-control" multiple="multiple">
					<option value="Red">Red</option>
					<option value="Green">Green</option>
					<option value="Yellow">Yellow</option>
					<option value="Blue">Blue</option>
					<option value="Black">Black</option>
					<option value="White">White</option>
				</select>
				<span asp-validation-for="Colors" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label class="control-label">add Size</label>
				<select asp-for="Sizes" class="form-control" multiple>
					<option value="S">S</option>
					<option value="M">M</option>
					<option value="L">L</option>
					<option value="XL">XL</option>
					<option value="XXL">XXL</option>
				</select>
				<span asp-validation-for="Sizes" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="File" class="control-label"></label>
				<div class="custom-file">
					<input asp-for="File" class="custom-file-input" id="productImage"
						   onchange="document.getElementById('FrontImage').src= window.URL.createObjectURL(this.files[0])" />
					<label class="custom-file-label" for="productImage">Choose file</label>
				</div>
				<span asp-validation-for="File" class="text-danger"></span>
				<img id="FrontImage" src="" alt="Product Image" width="150" height="150" style="border:1px;margin-top:20px;margin-left:120px;" />
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Back to List</a>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}

	<script type="text/javascript">

		$("#CatigoryList").change(function () {

			var CategoryId = $("#CatigoryList option:selected").val();
			$("#TypeList").empty();
			$.ajax({
				type: "POST",
				url: "/Admin/GetTypeDataByCategoryId",
				data: { categoryId: CategoryId },
				success: function(res) {
					console.log(res);
					$.each(res, function(i, e) {
						$("#TypeList").append("<option value='" + e.Id + "'>" + e.Name + "</option>");
					});
				}

			});


		});


		$(".custom-file-input").on("change", function() {

			var fileName = $(this).val().split("\\").pop();
			console.log(fileName);
			$(this).siblings(".custom-file-label").addClass("selected").html(fileName);
		});
	</script>

				}