@model ECommerce.ViewModel.ProductViewModel

@{
}
<div class="col-lg-4 col-md-6">
	<div class="product__item">
		<div class="product__item__pic">
			<img src="~/Files/Imgs/Product/@Model.Image" style="width:100%; height:100%" />
			<div class="label new">New</div>
		</div>

		<div class="product__item__text">
			<h6><a asp-action="Index" asp-controller="ProductDetails" asp-route-Id="@Model.Id" asp-route-CatId="@ViewData["catId"]">@Model.Name</a></h6>
			<div class="rating">
				<i class="fa fa-star"></i>
				<i class="fa fa-star"></i>
				<i class="fa fa-star"></i>
				<i class="fa fa-star"></i>
				<i class="fa fa-star"></i>
			</div>
			<div class="product__price">$ @Model.Price</div>
		</div>
	</div>
</div>
